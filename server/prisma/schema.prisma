generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())
  members   Member[]
  events    Event[]
  sponsors  Sponsor[]
}

model Member {
  id         Int            @id @default(autoincrement())
  orgId      Int
  org        Org            @relation(fields: [orgId], references: [id])
  fullName   String
  email      String
  role       String
  tags       String[]
  lastSeenAt DateTime?
  rsvps      RSVP[]
  authoredNotes      Note[]           @relation("NoteAuthor")
  uploadedAttachments Attachment[]    @relation("AttachmentUploader")
  assignedVolunteerTasks VolunteerTask[] @relation("VolunteerTaskAssignee")
}

model Event {
  id           Int            @id @default(autoincrement())
  orgId        Int
  org          Org            @relation(fields: [orgId], references: [id])
  title        String
  startsAt     DateTime
  endsAt       DateTime
  location     String?
  status       String
  capacity     Int?
  rsvps        RSVP[]
  volunteerTasks VolunteerTask[]
}

model RSVP {
  id        Int     @id @default(autoincrement())
  eventId   Int
  memberId  Int
  status    String
  checkedIn Boolean @default(false)
  event     Event   @relation(fields: [eventId], references: [id])
  member    Member  @relation(fields: [memberId], references: [id])
}

model Sponsor {
  id           Int     @id @default(autoincrement())
  orgId        Int
  org          Org     @relation(fields: [orgId], references: [id])
  name         String
  contactEmail String?
  tier         String?
  stage        String
  pledged      Decimal? @db.Decimal(10, 2)
  received     Decimal? @db.Decimal(10, 2)
}

model VolunteerTask {
  id               Int          @id @default(autoincrement())
  orgId            Int
  eventId          Int
  title            String
  status           String
  priority         String?      // Urgent, High, Medium, Low, Backlog
  dueAt            DateTime?
  assigneeMemberId Int?
  event            Event        @relation(fields: [eventId], references: [id])
  assignee         Member?      @relation("VolunteerTaskAssignee", fields: [assigneeMemberId], references: [id])
  notes            Note[]
  attachments      Attachment[]
}

model Note {
  id              Int           @id @default(autoincrement())
  authorMemberId  Int
  volunteerTaskId Int?
  content         String
  createdAt       DateTime      @default(now())
  author          Member        @relation("NoteAuthor", fields: [authorMemberId], references: [id])
  volunteerTask   VolunteerTask? @relation(fields: [volunteerTaskId], references: [id])
}

model Attachment {
  id                 Int           @id @default(autoincrement())
  volunteerTaskId    Int?
  uploadedByMemberId Int?
  fileName           String
  fileUrl            String
  uploadedAt         DateTime      @default(now())
  volunteerTask      VolunteerTask? @relation(fields: [volunteerTaskId], references: [id])
  uploadedBy         Member?       @relation("AttachmentUploader", fields: [uploadedByMemberId], references: [id])
}
